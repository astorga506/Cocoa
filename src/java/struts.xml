<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!--<include file="example.xml"/> -->
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">        
        <action name="iniciarSesion" method="iniciar" class="cr.topgadgets.application.action.SesionAction">
            <result name="success">bienvenida.jsp</result>
            <result name="error">prototipo_login.jsp</result> 
        </action>
        <action name="trueAction" method="trueCall" class="cr.topgadgets.application.action.MyAction">
            <result>/truePage.jsp</result>
        </action>
        <action name="terminarSesion" method="iniciar" class="cr.topgadgets.application.action.SesionAction">
            <result name="success">exito.jsp</result>
        </action>
    </package>
</struts>
